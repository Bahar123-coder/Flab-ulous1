<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:gravity="start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Set Reminder For Breakfast"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    <Button
        android:id="@+id/btnBrunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:gravity="start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Set Reminder For Brunch"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    <Button
        android:id="@+id/btnLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:gravity="start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Set Reminder For Lunch"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    <Button
        android:id="@+id/btnSnacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:gravity="start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Set Reminder For Snacks"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    <Button
        android:id="@+id/btnBeforeDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:gravity="start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Set Reminder For Before Dinner"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    <Button
        android:id="@+id/btnDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:gravity="start"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Set Reminder For Dinner"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</LinearLayout>